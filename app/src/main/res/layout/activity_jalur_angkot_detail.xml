<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/detail"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:background="@color/blue">

        <TextView
            android:id="@+id/tv_kode_angkot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="Kode Angkot"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_nama_trayek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="Nama trayek"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tv_berangkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="Dari"/>

        <TextView
            android:id="@+id/tv_tujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="Ke"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_jalur_pergi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:text="Jalur Pergi"
        android:layout_below="@id/detail"/>

    <Button
        android:id="@+id/btn_jalur_pulang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:text="Jalur Pulang"
        android:layout_below="@id/btn_jalur_pergi"/>

</RelativeLayout>